<script type="text/ng-template" id="feeds_show_case_template.html">
    <div ng-repeat="feed in feeds" class="feed-showcase">
        <table>
            <!-- Cover Tweet -->
            <tr class="feed-image-row" ng-class="feed.coverTextClass">
                <td class="feed-image-cell" ng-style="feed.coverBg" >
                    <div class="feed-cover-text-container">
                        <div class="feed-cover-text">
                            <p class="tweet-text top-image-tweet-text" ng-bind-html="feed.coverTweet.text | tweetTextFilter:feed.coverTweet.entities"></p>
                            <p class="tweet-timestamp"><a ng-href="http://twitter.com/{{feed.screenName}}/status/{{feed.coverTweet.idStr}}" target="_blank">{{feed.coverTweet.createdAt | tweetTimestampFilter}}</a></p>
                            <p class="feed-cover-show-more"><a ng-href="#/feed/{{feed.id}}">Show All Tweets</a></p>
                        </div>
                    </div>
                    <div class="feed-cover-show-more-container">
                        <p class="feed-cover-show-more"><a ng-href="#/feed/{{feed.id}}">Show All Tweets</a></p>
                    </div>
                    <div class="feed-image-hover-plate"></div>
                    <div class="feed-image-tweet-body-hover">
                        <p class="tweet-text top-image-tweet-text" ng-bind-html="feed.coverTweet.text | tweetTextFilter:feed.coverTweet.entities"></p>
                        <p class="tweet-timestamp"><a ng-href="http://twitter.com/{{feed.screenName}}/status/{{feed.coverTweet.idStr}}" target="_blank">{{feed.coverTweet.createdAt | tweetTimestampFilter}}</a></p>
                    </div>
                </td>
            </tr>

            <!-- More Top Tweets -->
            <tr ng-repeat="topTweet in feed.topTweets">
                <td class="feed-top-tweet-cell">
                    <p class="tweet-text" ng-bind-html="topTweet.text | tweetTextFilter:topTweet.entities"></p>
                    <p class="tweet-timestamp"><a ng-href="http://twitter.com/{{feed.screenName}}/status/{{topTweet.idStr}}" target="_blank">{{topTweet.createdAt | tweetTimestampFilter}}</a></p>
                </td>
            </tr>

            <!-- Feed Profile -->
            <tr>
                <td class="feed-profile-cell">
                    <img ng-src="{{feed.profileImageUrl}}" alt="">
                    <div class="profile-detail">
                        <div class="profile-name">{{feed.name}}</div>
                        <div class="profile-screen-name">
                            <a ng-href="http://twitter.com/{{feed.screenName}}" target="_blank">
                                @{{feed.screenName}}
                                <span>open in Twitter.com</span>
                            </a>
                        </div>
                    </div>
                    <a ng-href="#/feed/{{feed.id}}" class="feed-unread-count">{{feed.unreadCount}}</a>
                </td>
            </tr>

        </table>
    </div>
</script>


<script type="text/ng-template" id="feeds_more_tweets_template.html">
    <div infinite-scroll='loadMoreTweets()'
         infinite-scroll-immediate-check='false'
         infinite-scroll-distance='1'
         infinite-scroll-disabled='busyScrolling'
         class="tweets-inner">
        <a href="#/" class="back-button">x</a>
        <div tweet ng-repeat="tweet in tweets" class="tweet">
            <div class="tweet-content">
                <div class="tweet-user-profile">
                    <a class="user-profile-image" href="#">
                        <img ng-src="{{ tweet.profile_image_url }}">
                    </a>
                    <a class="user-name" href="">{{tweet.name}} <span class="user-screen-name">@{{tweet.screen_name}}</span></a>
                    <a class="tweet-timestamp" href="">{{tweet.created_at | tweetTimestampFilter}}</a>
                </div>
                <p class="tweet-text" ng-bind-html="tweet.text | tweetTextFilter:tweet.entities"></p>
                <div class="tweet-entities">
                    <a magnific-popup ng-repeat="media in tweet.entities.media" class="twitter-entity-image" ng-href="{{ media.media_url }}"></a>
                </div>
            </div>
        </div>
    </div>
</script>
