<!-- FeedsContent -->
<section class="feeds">
	<div class="toolbox">
		<%= link_to({controller: 'settings', action: 'manage_folders'}, class: 'feeds-toolbox-button', id: 'manage_folder') do %>
			<i class="icon-wrench"></i>
		<% end %>
	</div>
	<div class="list-container feeds-list">

		<!-- Folders and Feeds -->
		<% @user.folders.order("position DESC").each do |folder| %>
			<div class="folder list-container-item">
				<a href="#" class="item-face folder-face">
				    <div class="folder-name"><%= folder.name %></div>
				    <span class="item-icon-right unread-count"><%= folder.unread_count %></span>
				</a>
				<div class="list-item-hover">
				    <a href="#" class="item-icon-right icon-angle-down feed-option-more"></a>
				</div>
				<div class="folder-feeds-list">

					<!-- Feeds -->
					<% folder.feeds.order("unread_count DESC").each do |feed| %>
						<div class="feed list-container-item">
							<a href="#" class="item-face">
							    <img class="item-icon-left feed-profile-image" src="<%= feed.profile_image_url %>">
							    <div class="feed-name"><%= feed.name %> <span class="feed-screen-name">@<%= feed.screen_name %></span></div>
							    <span class="item-icon-right unread-count"><%= feed.unread_count %></span>
							</a>
							<div class="list-item-hover">
							    <a href="#" class="item-icon-left icon-star feed-option-fav"></a>
							    <a href="#" class="item-icon-right icon-angle-down feed-option-more"></a>
							</div>
						</div>
					<% end %>
					<!-- END of Feeds -->

				</div>
			</div>
		<% end %>
		<!-- END of Folders -->

	</div>
</section>

<!-- TweetsContent -->
<section class="tweets">
	<div class="toolbox">
		<%= link_to 'Mark All Read', '#', {class: 'tweets-toolbox-button', id: 'mark_all_read'} %>
	</div>
	<div class="list-container tweets-list">

	</div>
</section>

<!-- Template -->
<%= render 'underscore_templates' %>
