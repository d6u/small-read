<div class="sr-title sr-title-setting">Manage Connected Account</div>


<div class="settings-container">

    <% if flash[:add_twitter_error] %>
    <div class="alert alert-error">
        <p class="lead"><%= flash[:add_twitter_error] %></p>
    </div>
    <% end %>

    <% if @status_message %>
    <div class="alert alert-success">
        <p class="lead"><%= @status_message %></p>
    </div>
    <% end %>

    <!-- Settings Form -->
    <% @user.twitters.each do |t| %>
    <div class="twitter-account-list-item">
        <%= link_to({:delete_twitter => true, :twitter_id => t.id},
            {:confirm => "Are your sure to un-connect @#{t.screen_name} ?",
             'data-dismiss' => 'alert'}) do %>
        <i class="icon-remove"></i>
        <% end %>
        @<%= t.screen_name %>
    </div>
    <% end %>
    <%= link_to('Link another Twitter account',
        {:link_twitter => true},
        {:class => 'button button-blue'}) %>

</div>
