<div class="settings-body settings-folders">

    <!-- Folder Management -->
    <div class="folder-management">
        <p class="lead-title">Manage Folders</p>
        <div class="form-inline create-new-folder-block">
            <span class="help-inline">Create a new folder </span>
            <%= text_field_tag :new_folder_name, nil, :class => 'input-xlarge', :placeholder => 'New folder name' %>
            <%= button_tag "Create", :type => 'button', :class => 'btn btn-primary', :id => 'create_new_folder_button' %>
            <span class="alert alert-error" id="create_folder_alert">Name cannot be empty.</span>
        </div>

        <div class="folder-list">
            <% @folders.each do |folder| %>
            <div class="folder-list-item alert alert-info form-inline"
                 <%= output_attributes_as_dataset(folder) %>>
                <div class="btn-group">
                    <a class="btn btn-primary rearrange-folder">
                        <i class="icon-resize-vertical"></i>
                    </a>
                    <button class="btn btn-primary rename-folder" <%= disabled_if_reserved(folder) %>>Rename</button>
                </div>
                <span class="folder-list-item-name"><%= folder.name %></span>
                <span class="folder-list-item-rename hide">
                    <input type="text" value="<%= folder.name %>">
                    <button class="btn submit-folder-rename">Change</button>
                </span>
                <button class="btn btn-primary delete-folder" <%= disabled_if_reserved(folder) %>>
                    <i class="icon-trash"></i>
                </button>
            </div>
            <% end %>
        </div>
    </div>

</div>

<%= render 'underscore_templates' %>
