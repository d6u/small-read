<%= render :layout => 'layouts/htmldoc' do %>
    <%= render 'inside/navbar' %>
    <%= yield %>
    <%= render 'inside/feedback_modal' %>
    <% if Rails.env.production? %>
        <script type="text/javascript">
        mixpanel.identify(<%= @user.id %>);
        mixpanel.people.set({'$email': '<%= @user.email %>'});
        <% if @user.twitters[0] %>
        mixpanel.people.set({'screen_name': '<%= @user.twitters[0].screen_name %>'});
        <% end %>
        </script>
    <% end %>
<% end %>
